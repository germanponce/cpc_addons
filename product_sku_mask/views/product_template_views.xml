<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="product_template_inherit_code_mask" model="ir.ui.view">
			<field name="name">product.template.product.form plus code mask</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<field name="default_code" position="attributes">
					<attribute name="widget">mask</attribute>
					<attribute name="data-inputmask">'mask': '999-9999'</attribute>
				</field>
			</field>
		</record>
	</data>
</odoo>