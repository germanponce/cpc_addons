<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_int_wzd_form" model="ir.ui.view">
            <field name="name">Materials projection requirement</field>
            <field name="model">explode.so.bom.select</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <p>Here you can select the amount of days for projection making based on commitment date</p>
                        <separator string="Amount of time" />
                        <group>
                            <group>
                                <field name="days" />
                            </group>
                        </group>
                        <footer>
                            <button type="object" name="process" string="Process" class="oe_highlight" />
                            <button special="cancel" string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
           </field>
        </record>
    </data>
</odoo>